{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Exchange Rates Relative to MYR (19 Sep 2024)",
    "color": "#ffffff"
  },
  "width": 800,
  "height": 400,
  "background": "#2c3e50",
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_110m_graticules_30.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgray",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nvkelso/natural-earth-vector/master/geojson/ne_110m_ocean.geojson",
        "format": {"type": "json"}  
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/k-cmy/FIT3179-A2/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/k-cmy/FIT3179-A2/main/datasets/latest_exchange_rate.csv"
            },
            "key": "Country",
            "fields": ["exchange_rate"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "exchange_rate",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [0.1,1,10,20,30,1000],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603", "#8c2d04"],
            "domainMid": 1,
            "clamp": true
          },
          "legend": {
            "title":"Exchange Rate (Currency per 1 MYR",
            "titleColor": "#ffffff", 
            "labelColor": "#ffffff",  
            "clipHeight": 30,
            "gradientLength": 200,
            "format": ".2f"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "exchange_rate", "type": "quantitative", "title": "MYR to Local Currency", "format": ".4f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/k-cmy/FIT3179-A2/main/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/k-cmy/FIT3179-A2/main/datasets/latest_exchange_rate.csv"
            },
            "key": "Country",
            "fields": ["exchange_rate"]
          }
        },
        {
          "filter": "datum.exchange_rate === null"
        },
        {
          "calculate": "'No data available'", "as": "noDataText"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#cccccc",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "noDataText", "type": "nominal", "title": "Exchange Rate"}
        ]
      }
    }
  ],
  "config": {
    "background": "#2c3e50",
    "title": {
      "color": "#ffffff"  
    },
    "legend": {
      "titleColor": "#ffffff",  
      "labelColor": "#ffffff"   
    }
  }
}